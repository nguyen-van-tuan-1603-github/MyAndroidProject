<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_profile" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="251dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:text="Account: trqphuoc"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_trangChu"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:text="Trang chủ"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView_gioiThieu"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        android:text="Giới thiệu về Haidilao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_trangChu" />

    <TextView
        android:id="@+id/textView_lienHe"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:text="Liên hệ Haidilao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gioiThieu" />

    <TextView
        android:id="@+id/textView_thongTin"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="44dp"
        android:text="Thông tin tài khoản"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_lienHe" />

    <TextView
        android:id="@+id/textView_signout"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="Sign Out"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_thongTin" />
</androidx.constraintlayout.widget.ConstraintLayout>